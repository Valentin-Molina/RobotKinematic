{
  "version": 6,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 23,
    "patch": 0
  },
  "configurePresets": [
    {
      "name": "clang-base",
      "hidden": true,
      "generator": "Unix Makefiles",
      "binaryDir": "${sourceDir}/build/",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_CXX_COMPILER": "clang++",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "YES"
      }
    },
    {
      "name": "clang-debug-coverage",
      "inherits": "clang-base",
      "description": "Debug build using Clang",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Debug",
        "BUILD_TESTS": "ON",
        "CMAKE_C_FLAGS": "-O0 -fprofile-instr-generate -fcoverage-mapping",
        "CMAKE_CXX_FLAGS": "-O0 -fprofile-instr-generate -fcoverage-mapping"
      }
    },
    {
      "name": "clang-release",
      "inherits": "clang-base",
      "description": "Release build using Clang",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_C_FLAGS": "-O3",
        "CMAKE_CXX_FLAGS": "-O3"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "build-clang-debug-coverage",
      "configurePreset": "clang-debug-coverage"
    },
    {
      "name": "build-clang-release",
      "configurePreset": "clang-release"
    }
  ],
  "testPresets": [
    {
      "name": "test-clang-debug-coverage",
      "configurePreset": "clang-debug-coverage",
      "output": {
        "outputOnFailure": true,
        "outputJUnitFile": "test-results.xml"
      }
    }
  ]
}
